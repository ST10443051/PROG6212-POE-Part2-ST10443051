@model IEnumerable<CMCS.Models.Approver>


@{
    ViewData["Title"] = "Index";
}

<h1>Approvers</h1>

<!-- View to see all approvers (IIE, 2025) -->

<!-- Card container for the 'Create new Approver' button (IIE, 2025)  -->
<div class="card" style="margin-bottom: 20px">
    <a asp-controller="Approver" class="btn-action" asp-action="Create">Create new Approver</a>
</div>

<!-- If no approvers exist, show message (IIE, 2025) -->
@if (Model == null || !Model.Any())
{
    <h3>No Approvers :(</h3>
}
else
{
    <hr/>
    <!-- Table displaying all approvers (IIE, 2025) -->
    <table class="table">
        <thead>
            <tr>
                <th>ApproverID</th>
                <th>Name</th>
                <th>Role</th>
                <th>Functions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.ApproverID</th>
                    <td>@item.name</td>
                    <td>@item.role</td>
                    <td>
                        <a asp-controller="Approver" asp-action="PendingClaims"
                           class="btn-action">
                            View Pending Claims
                        </a>

                        <a asp-controller="Approver" asp-action="Delete"
                           asp-route-approverId="@item.ApproverID"
                           class="btn-action">
                            Delete
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Home" class="btn-action" style="margin-top: 20px" asp-action="Index">Back to Home</a>
