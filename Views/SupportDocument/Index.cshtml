@model IEnumerable<CMCS.Models.SupportDocument>

@{
    ViewData["Title"] = "Index";
}

<h1>Support Documents for ClaimID @ViewBag.ClaimID</h1>

<div class="card" style="margin-bottom: 20px">
    <a asp-controller="SupportDocument" asp-action="Create"
       asp-route-lecturerId="@ViewBag.LecturerID"
       asp-route-claimId="@ViewBag.ClaimID"
       class="btn-action">
        Upload Support Document
    </a>
</div>

@* Table for all added support documents for the selected claim *@
@if (Model == null || !Model.Any())
{
    <h3>No documents uploaded :(</h3>
}
else
{
    <hr/>
<table class="table">
    <thead>
        <tr>
            <th>SupportDocumentID</th><th>File Name</th>
            <th>File Type</th>
            <th>Upload Date</th>
            <th>Functions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var document in Model)
        {
            <tr>
                <th>@document.supportDocumentID</th>
                <td>@document.fileName</td>
                <td>@document.fileType</td>
                <td>@document.uploadDate</td>
                <td>
                    <a asp-controller="SupportDocument" asp-action="ViewDocument"
                     asp-route-lecturerId="@ViewBag.LecturerID"
                     asp-route-claimId="@ViewBag.ClaimID"
                     asp-route-supportDocumentID="@document.supportDocumentID"
                     class="btn-action">
                     View Document
                    </a>

                    <a asp-controller="SupportDocument" asp-action="Delete"
                     asp-route-lecturerId="@ViewBag.LecturerID"
                     asp-route-claimId="@ViewBag.ClaimID"
                     asp-route-supportDocumentId="@document.supportDocumentID"
                     class="btn-action">
                     Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
<a asp-controller="Claim" 
 asp-route-lecturerId="@ViewBag.LecturerID"
 asp-route-claimId="@ViewBag.ClaimID" 
 class="btn-action">Back to Claims Table </a>

