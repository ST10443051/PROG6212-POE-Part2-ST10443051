@model IEnumerable<CMCS.Models.Lecturer>

@{
    ViewData["Title"] = "Index";
}

<h1>Lecturers</h1>

@* Card to create Lecturer profile *@
<div class="card" style="margin-bottom: 20px">
    <a asp-controller="Lecturer" class="btn-action" asp-action="Create">Create New Lecturer</a>
</div>

@if (Model == null || !Model.Any())
{
    <h3>No lecturers :(</h3>
}
else
{
    <hr/>
    <table class="table">
        <thead>
            <tr>
                <th>LecturerID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Functions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.LecturerID</th>
                    <td>@item.name</td>
                    <td>@item.email</td>
                    <td>
                        <a asp-controller="Claim" asp-action="Index" 
                        asp-route-lecturerId="@item.LecturerID" 
                        class="btn-action">
                        View Claims
                        </a>

                        <a asp-controller="Lecturer" asp-action="Delete" 
                        asp-route-lecturerId="@item.LecturerID" 
                        class="btn-action">
                        Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Home" class="btn-action" style="margin-top: 20px" asp-action="Index">Back to Home</a>
