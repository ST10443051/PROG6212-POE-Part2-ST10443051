@model CMCS.Models.Approver

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<!-- Deletion confirmation for the selected Approver profile (Auto-generated by VS) -->

<h3>Are you sure you want to delete this approver?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ApproverID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApproverID)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            Role
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.role)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ApproverID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Cancel</a>
    </form>
</div>
