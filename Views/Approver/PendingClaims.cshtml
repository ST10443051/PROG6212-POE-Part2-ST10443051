@model IEnumerable<dynamic>// (OpenAI, 2025)

@{
    ViewData["Title"] = "PendingClaims";
}

<h1>Pending Claims</h1>

@* Table for all the pending claims *@

@if (Model == null || !Model.Any())
{
    <h3>No pending claims yet :(</h3>
}
else
{
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>Lecturer ID</th>
                <th>Claim ID</th>
                <th>Notes</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <th>@claim.LecturerID (@claim.LecturerName)</th>
                    <td>@claim.ClaimID</td>
                    <td>@claim.Notes</td>
                    <td>@claim.HoursWorked</td>
                    <td>R @claim.HourlyRate</td>
                    <td>R @claim.Amount</td>
                    <td>@claim.Status</td>
                    <td>
                        <form asp-controller="Approver" asp-action="ApproveClaim" method="post">
                            <input type="hidden" name="lecturerId" value="@claim.LecturerID" />
                            <input type="hidden" name="claimId" value="@claim.ClaimID" />
                            <button type="submit" class="btn-verification btn-approve">
                            Approve
                            </button>
                        </form>

                        <form asp-controller="Approver" asp-action="DeclineClaim" method="post">
                            <input type="hidden" name="lecturerId" value="@claim.LecturerID" />
                            <input type="hidden" name="claimId" value="@claim.ClaimID" />
                            <button type="submit" class="btn-verification btn-decline">
                            Decline
                            </button>
                        </form>

                        <a asp-controller="SupportDocument" asp-action="IndexApprover"
                           asp-route-lecturerId="@claim.LecturerID"
                           asp-route-claimId="@claim.ClaimID"
                           class="btn-action">
                            View Docs
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Approver" asp-action="Index" class="btn-action">Back to Approvers Table</a>
