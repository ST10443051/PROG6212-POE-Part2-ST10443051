@model CMCS.Models.Lecturer

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<!-- Deletion confirmation for the selected Lecturer profile (Auto-generated by VS) -->

<h3>Are you sure you want to delete this lecturer?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            LecturerID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LecturerID)
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
    </dl>

    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="LecturerID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Cancel</a>
    </form>
</div>
