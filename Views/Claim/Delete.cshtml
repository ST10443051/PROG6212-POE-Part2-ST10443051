@model CMCS.Models.Claim

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<!-- Deletion confirmation for the selected Claim profile (Auto-generated by VS) -->

<h3>Are you sure you want to delete this claim?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ClaimID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.claimID)
        </dd>
        <dt class = "col-sm-2">
            Note
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.notes)
        </dd>
        <dt class = "col-sm-2">
            Hours Worked
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hoursWorked)
        </dd>
        <dt class = "col-sm-2">
            Hourly Rate
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hourlyRate)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt class = "col-sm-2">
            Date of Submission
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date)
        </dd>
        <dt class = "col-sm-2">
            LecturerID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.lecturerID)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" name="lecturerId" value="@ViewBag.LecturerID" />
        <input type="hidden" name="claimId" value="@ViewBag.ClaimID" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        
        <a asp-action="Index" 
        asp-route-lecturerId="@ViewBag.LecturerID">
        Cancel
        </a>
    </form>
</div>
