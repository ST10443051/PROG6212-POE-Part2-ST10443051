@model CMCS.Models.Approver

@{
    ViewData["Title"] = "Create";
}

<h1>Create Approver</h1>
<hr />
<!-- Creation screen for the selected Approver profile -->
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="role" class="control-label"></label>
                <select asp-for="role" class="form-control">
                    <option value="">---Select role---</option>
                    @foreach (var type in ViewBag.Roles as List<string>)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-action" />
                <a asp-action="Index" class="btn-action">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
